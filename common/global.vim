syntax enable
filetype plugin indent on
colorscheme default
set autoindent
set background=dark
set expandtab
set encoding=utf-8
set fileencoding=utf-8
set fileencodings=ucs-bom,utf-8,gb18030,cp936,latin1
set foldlevel=9999
set foldmethod=indent
set list
set listchars=tab:¦\ ,extends:→,precedes:←,nbsp:·,trail:· "¦▏⎸⎢𝄄
set mouse=a
set nohlsearch
set number
set relativenumber
set shiftround
set shiftwidth=4
set signcolumn=yes
set splitbelow
set smartindent
set smarttab
set softtabstop=-1
set tabstop=4
set termguicolors
set updatetime=500
set lazyredraw
